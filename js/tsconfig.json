{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2020",
    "module": "CommonJS",
    "lib": [
        "es2020"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "pretty": true,
    "removeComments": false,
    "stripInternal": true,
    "listFiles": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts"
  ]
}